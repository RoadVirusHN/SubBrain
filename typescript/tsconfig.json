{
  "compilerOptions": {
    "target": "es2021",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    // "moduleResolution": "node",
    // "resolveJsonModule": true,
    "strict": true,
    "outDir": "../docs/assets/js",
    "sourceMap": true,
    "sourceRoot": "../../../../typescript/src/assets/js",
    "typeRoots": ["./node_modules/@types", "./src/assets/js/types"]
  },
  "include": ["src/assets/js/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
