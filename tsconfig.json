{
  "compilerOptions": {
    "target": "es2021",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "rootDirs": [".", "scripts"],
    "outDir": "assets/",
    "typeRoots": ["node_modules/@types", "ts/types"],
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
